@model List<Post>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h1>Lista Postów</h1>
<div>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model[0].Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Autor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Tags)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Comment)
            </th>
            <th>
                Akcje
            </th>
        </tr>
        @foreach (var item in @Model)
        {
            <tr>
                <td>
                    @item.Content
                </td>
                <td>
                    @item.Autor
                </td>
                <td>
                    @item.Tags
                </td>
                <td>
                    @item.Comment
                </td>
                <td>
                    <a class="btn btn-outline-primary"
                       asp-action="Update"
                       asp-controller="Post"
                       asp-route-id=@item.Id>Edytuj</a>
                    <a class="btn btn-outline-info"
                       asp-action="Details"
                       asp-controller="Post"
                       asp-route-id=@item.Id>Szczegóły</a>
                    <a class="btn btn-outline-danger"
                       asp-action="Delete"
                       asp-controller="Post"
                       asp-route-id=@item.Id>Usuń</a>
                </td>
            </tr>
        }
    </table>
    <a class="btn btn-outline-success" asp-action="Create" asp-controller="Post">Dodaj nowy post</a>
</div>
